<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/public">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>      
      </div>
    <% if (typeof email === 'string') {%>
      <div style='float: right; margin-left: auto; justify-content: center; align-items: baseline; flex-direction: row;'>
        <form class="form-inline" action="/login" method="POST" >
          <div class="form-group mb-2">
            <label for="username" style="margin-right: 10em;">Logged in as: <%=email%></label>
            <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em; display: none;">
            <a href="/login"><button type="submit" class="btn btn-primary">logout</button></a>
          </div>
        </form>
      </div>
    <%} else {%>
      <div class="form-inline" style='float: right; margin-left: auto; justify-content: center; align-items: baseline; flex-direction: row;'>
        
        <div>
          <a href="/register"><button  type="submit" class="btn btn-primary">Register</button></a>
        </div>
        <div style="display:table-cell; width: 1em; height: 1em;"></div>
        <div>
          <form class="form-inline" action="/login" method="GET" >
            <div class="form-group mb-2">
              <label for="username" style="display: none;">email</label>
              <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em; display: none;">
              <a href="/login"><button type="submit" class="btn btn-primary">login</button></a>
            </div>
          </form>
        </div>

      </div>
    <% } %>

  </nav>
</header>